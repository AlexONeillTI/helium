{
  "name": "@thoughtindustries/helium-template",
  "version": "1.0.0-alpha.0",
  "scripts": {
    "dev": "node ./server",
    "// To build and try the worker locally": "",
    "prod": "npm run build && wrangler dev --verbose",
    "// To build and deploy the worker to Cloudflare Workers": "",
    "deploy": "npm run build && wrangler publish",
    "// Build process": "",
    "build": "npm run build:vite && npm run build:worker",
    "build:vite": "vite build && vite build --ssr",
    "build:worker": "wrangler build"
  },
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@mdx-js/mdx": "^2.0.0-next.9",
    "@mdx-js/react": "^1.6.22",
    "@thoughtindustries/hero": "^1.0.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "graphql": "^16.0.0",
    "isomorphic-unfetch": "^3.1.0",
    "jwt-decode": "^3.1.2",
    "node-html-parser": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vite": "^2.5.2",
    "vite-plugin-mdx": "^3.5.6",
    "vite-plugin-ssr": "^0.3.2",
    "vite-plugin-windicss": "^1.4.9",
    "windicss": "^3.1.9"
  }
}
