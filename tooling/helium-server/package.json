{
  "name": "@thoughtindustries/helium-server",
  "version": "1.0.4",
  "description": "Packages needed for running Helium Server",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "watch": "npm run build -- --watch src",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "src",
    "worker",
    "webpack.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtindustries/helium.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thoughtindustries/helium/issues"
  },
  "homepage": "https://github.com/thoughtindustries/helium#readme",
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "@mdx-js/rollup": "^2.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "express": "^4.17.3",
    "graphql-playground-middleware-express": "^1.7.23",
    "isomorphic-unfetch": "^3.1.0",
    "vite-plugin-ssr": "^0.3.59"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "tsup": "^5.11.13"
  }
}
