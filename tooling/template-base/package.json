{
  "name": "@thoughtindustries/helium-template",
  "version": "1.1.0-alpha.4",
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"node ./server\"",
    "dev:css": "tailwindcss -o ./renderer/tailwind.css --watch",
    "// To build and try the worker locally": "",
    "prod": "npm run build && wrangler dev --verbose",
    "// To build and deploy the worker to Cloudflare Workers": "",
    "deploy": "npm run build && wrangler publish",
    "// Build process": "",
    "build": "npm run build:css && npm run build:vite && npm run build:worker",
    "build:css": "tailwindcss -o ./renderer/tailwind.css",
    "build:vite": "vite build && vite build --ssr",
    "build:worker": "wrangler build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@apollo/client": "^3.5.4",
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@graphql-tools/graphql-tag-pluck": "^7.1.3",
    "@mdx-js/mdx": "^2.0.0-next.9",
    "@mdx-js/react": "^1.6.22",
    "@thoughtindustries/content": "^1.0.1-alpha.3",
    "@thoughtindustries/featured-content": "^1.1.1-alpha.3",
    "@thoughtindustries/helium-server": "^1.0.1",
    "@thoughtindustries/hero": "^1.0.1-alpha.6",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "crypto-hash": "^2.0.0",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "graphql": "^16.0.0",
    "i18next": "^21.4.2",
    "isomorphic-unfetch": "^3.1.0",
    "jwt-decode": "^3.1.2",
    "node-html-parser": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.14.2",
    "tailwindcss": "^3.0.9",
    "vite": "^2.5.2",
    "vite-plugin-ssr": "^0.3.2"
  },
  "devDependencies": {
    "@thoughtindustries/helium": "^1.1.0-alpha.2",
    "graphql-playground-middleware-express": "^1.7.23",
    "typescript": "^4.5.5"
  },
  "volta": {
    "node": "16.13.1",
    "npm": "8.3.0"
  }
}
