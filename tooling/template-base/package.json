{
  "name": "@thoughtindustries/helium-template",
  "version": "1.1.0-alpha.13",
  "main": "dist/worker.js",
  "scripts": {
    "authenticate": "helium authenticate",
    "deploy": "helium deploy",
    "dev": "helium dev",
    "update-translations": "helium update-translations",
    "dev:vite": "concurrently \"npm run dev:css\" \"ts-node ./server/index.ts\"",
    "dev:css": "tailwindcss -c tailwind.config.cjs -o ./renderer/tailwind.css --watch",
    "build": "npm run build:css && npm run build:vite && npm run build:worker",
    "build:css": "tailwindcss -c tailwind.config.cjs -o ./renderer/tailwind.css",
    "build:vite": "vite build && vite build --ssr",
    "build:worker": "node ./build-worker.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "dependencies": {
    "@apollo/client": "^3.6.0-beta.5",
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "@graphql-tools/graphql-tag-pluck": "^7.1.3",
    "@mdx-js/react": "^1.6.22",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@thoughtindustries/catalog": "^1.1.1",
    "@thoughtindustries/content": "^1.1.0-alpha.1",
    "@thoughtindustries/featured-content": "^1.2.0-alpha.1",
    "@thoughtindustries/helium-server": "^1.1.0",
    "@thoughtindustries/hero": "^1.0.1-alpha.6",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "graphql": "^16.0.0",
    "i18next": "^21.4.2",
    "jwt-decode": "^3.1.2",
    "node-html-parser": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.14.2",
    "tailwindcss": "^3.0.9",
    "vite": "^2.5.2",
    "vite-plugin-ssr": "^0.3.59"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@thoughtindustries/helium": "^1.1.0-alpha.5",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.39",
    "esbuild": "^0.14.29",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.5"
  },
  "volta": {
    "node": "16.13.1",
    "npm": "8.3.0"
  }
